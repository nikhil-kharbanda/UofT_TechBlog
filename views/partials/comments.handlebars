<div class="comments">
  {{#each this}}
    <div class="card">
      <h3 class="card-header"></h3>
      <section class="comment card-body">
        <div class="text fs-3">
          {{comment_text}}
        </div>
        <div>
          <p class="fs-5 font-weight-bold"> -By {{user.username}},
          {{format_date created_at}}</p>
        </div>
      </section>
    </div>
  {{/each}}
</div>